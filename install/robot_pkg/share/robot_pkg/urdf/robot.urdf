<?xml version="1.0"?>
<robot name="robot">
    <link name="world"/>

    <link name="base_link">
        <inertial>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <mass value="1.0"/> <!-- Adjust the mass as required -->
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.02"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.02"/>
            </geometry>
        </collision>
    </link>

    <link name="arm1">
        <inertial>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
            <mass value="0.5"/> 
            <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_to_world" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0"/>
    </joint>

    <joint name="rev_1" type="revolute">
        <axis xyz="0 0 1.0"/>
        <limit effort="80.00000" lower="-3.142" upper="3.142" velocity="-3.142"/>
        <parent link="base_link"/>
        <child link="arm1"/>
        <origin xyz="0 0 0.02"/>
    </joint>

    <link name="arm2">
        <inertial>
            <origin xyz="0.2 0 0" rpy="0 0 0"/>
            <mass value="0.4"/> 
            <inertia ixx="0.015" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
        </inertial>
        <visual>
            <origin xyz="0.2 0 0" rpy="0 1.57 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.2 0 0" rpy="0 1.57 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </collision>
    </link>
    <joint name="rev_2" type="revolute">
        <axis xyz="0.0 1.0 0.0"/>
        <limit effort="80.00000" lower="-3.142" upper="3.142" velocity="-3.142"/>
        <parent link="arm1"/>
        <child link="arm2"/>
        <origin xyz="0.0 0.1 0.45"/>
    </joint>

    <link name="arm3">
        <inertial>
            <origin xyz="0.05 0.20 0.0" rpy="0 0 0"/>
            <mass value="0.3"/> 
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.015" iyz="0.0" izz="0.02"/>
        </inertial>
        <visual>
            <origin xyz="0.05 0.20 0.0" rpy="1.57 1.57 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.05 0.20 0.0" rpy="1.57 1.57 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </collision>
    </link>
    <joint name="rev_3" type="revolute">
        <axis xyz="1.0 0.0 0.0"/>
        <limit effort="80.00000" lower="-0.78540" upper="3.142" velocity="-3.142"/>
        <parent link="arm2"/>
        <child link="arm3"/>
        <origin xyz="0.45 0.0 0.0"/>
    </joint>

    <ros2_control name="GazeboSystem" type="system">
    <hardware>
        <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <joint name="rev_1">
        <command_interface name="position">
            <param name="min">-3.142</param>
            <param name="max">3.142</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
    </joint>

    <joint name="rev_2">
        <command_interface name="position">
            <param name="min">-3.142</param>
            <param name="max">3.142</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
    </joint>

    <joint name="rev_3">
        <command_interface name="position">
            <param name="min">-3.142</param>
            <param name="max">3.142</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
    </joint>
</ros2_control>

    <gazebo>
        <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
            <parameters>/home/sanjay25/ROS2-Workspace/src/config/robot_config.yaml</parameters>
        </plugin>
    </gazebo>
</robot>
